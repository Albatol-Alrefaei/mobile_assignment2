<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="imageview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">52dp</item>
        <item name="android:layout_marginTop">42dp</item>
    </style>

    <style name="getstarted_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">67dp</item>
        <item name="android:layout_marginTop">170dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="freeacc_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">78dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#A2A2A2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textinput_style" >
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#A2A2A2</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="links">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">#6A5ACD</item>
    </style>

    <style name="button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#6C63FF</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>